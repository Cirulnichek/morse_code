<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/btn_color"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fr_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/fragment_backgroung"
        android:elevation="4dp"
        android:name="com.example.morse_code.fragments.StartFragment"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nvg_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="19"
        app:menu="@menu/bottom_navigation_menu"
        android:background="@color/btn_color"
        app:itemIconSize="25dp"
        app:itemIconTint="@color/txt_color"
        app:itemTextColor="@color/txt_color"
        app:itemActiveIndicatorStyle="@android:color/transparent"/>
</LinearLayout>
